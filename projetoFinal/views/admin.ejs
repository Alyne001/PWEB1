<%- include("partials/header") %>

<div class="container">
  <h1 class="text-center mb-4">Área do Coordenador</h1>

  <div class="card shadow p-4">
    <h3 class="mb-3">Acesso à planilha</h3>

    <form id="loginCoordForm">
      <div class="mb-3">
        <label class="form-label">Nome</label>
        <input id="nome" class="form-control" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Senha</label>
        <input id="senha" type="password" class="form-control" required>
      </div>

      <button type="submit" class="btn btn-primary w-100">
        Ver escala
      </button>
    </form>
  </div>
</div>

<script>
document.getElementById("loginCoordForm").addEventListener("submit", async (e) => {
  e.preventDefault();

  const nome = document.getElementById("nome").value;
  const senha = document.getElementById("senha").value;

  const res = await fetch("/api/coordenador", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ nome, senha })
  });

  const data = await res.json();

  if (res.ok && data.sucesso) {
    // link fixo da planilha
    window.location.href =
      "https://docs.google.com/spreadsheets/d/1QSdbF8xt3FM-V5faCFYcuBvld-2EwfZT53BUeZ7FR_E/edit?gid=0";
  } else {
    alert(data.mensagem || "Nome ou senha inválidos");
  }
});
</script>

