<%- include("partials/header") %>

<div class="container">
    <h1 class="text-center mb-4">Área do Coroinha</h1>

    <div class="card shadow p-4">
        <h3 class="mb-3">Consultar Escala</h3>

        <form id="loginForm">
            <div class="mb-3">
                <label class="form-label">Nome</label>
                <input id="nome" type="text" class="form-control" placeholder="Digite seu nome">
            </div>

            <div class="mb-3">
                 <label class="form-label">Senha</label>
                 <input id="senha" type="password" class="form-control" placeholder="Digite sua senha">
            </div>

            <div class="mb-3">
                <label class="form-label">Capela</label>
                <select id="capela" class="form-control" disabled>
                     <option value="">Selecione sua capela</option>
                     <option value="sj">Capela São José</option>
                </select>
            </div>

            <div class="text-center">
                 <button class="btn btn-primary w-100">Ver escala</button>
            </div>
        </form>


    </div>
</div>

<script>
document.getElementById("loginForm").addEventListener("submit", async (e) => {
    e.preventDefault();

    const nome = document.getElementById("nome").value.trim();
    const senha = document.getElementById("senha").value.trim();
    const capelaSelect = document.getElementById("capela");

    if (!nome || !senha) {
        alert("Por favor, preencha nome e senha");
        return;
    }

    try {
        const res = await fetch("/api/login", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ nome, senha })
        });

        const data = await res.json();

        // verifica se sucesso == true
        if (!data.sucesso) {
            alert(data.mensagem || "Você não tem cadastro");
            return;
        }

        // Preenche capela
        capelaSelect.value = data.capela;
        capelaSelect.disabled = true;

        // Redireciona
        if (data.linkEscala) {
            window.location.href = data.linkEscala;
        } else {
            alert("Nenhuma escala disponível para esta capela.");
        }

    } catch (erro) {
        alert("Erro ao conectar com o servidor");
        console.error(erro);
    }
});
</script>




